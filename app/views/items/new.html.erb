<div class="col-sm-12 col-sm-offset-1">
  <h3> Now I need some information on what you bought </h3>
</div>

<div class="well well-lg col-sm-6 col-sm-offset-1">
  <%= form_for @item, url: check_items_path do |form| %>

    <div class="form-group">
      <%= form.text_field :name, class: "form-control", placeholder: "Item" %>
    </div>
    <div class="form-group">
      <%= form.text_field :price, class: "form-control", placeholder: "Price" %>
    </div>
    <div class="form-group">
      <%= form.text_field :person, class: "form-control", placeholder: "Who's paying?" %>
    </div>

    <%= form.submit "Submit", class: "btn btn-primary btn-sm" %>

  <% end %>
</div>

<% if @items.length > 0 %>
  <div id="items" class="well well-lg col-sm-3 col-sm-offset-1">
    <% @items.each do |item| %>
        <%= "#{item.person}: #{item.name} - $#{'%.2f' % item.price}" %><br>
        <%= link_to 'Delete', check_item_path(item), method: :delete %><br>
    <% end %>
    <%= link_to 'Finalize', check_path(@item.check_id), class: "btn btn-primary btn-sm", style: "margin-top: 10px;" %>
  </div>
<% end %>
