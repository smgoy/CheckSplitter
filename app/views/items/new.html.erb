<h1> Enter the Item </h1>

<% @items.each do |item| %>
  <ul>
    <li><%= item.name %></li>
    <li><%= item.price %></li>
    <li><%= item.person %></li>
  </ul>
<% end %>

<%= form_for @item, url: check_items_path do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :person %>
    <%= form.text_field :person, class: "form-control" %>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>

<% end %>

<%= link_to 'Finalize', check_path(@item.check_id) %>
