<h1>Enter the total tax amount</h1>

<%= form_for @check do |form| %>

  <div class="form-group">
    <%= form.label :tax %>
    <%= form.text_field :tax, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total %>
    <%= form.text_field :total, class: "form-control" %>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>

<% end %>
